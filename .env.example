# =========================
# Server
# =========================
PORT=5050
NODE_ENV=production
BASE_URL=https://your-render-service.onrender.com

# =========================
# OpenAI
# =========================
OPENAI_API_KEY=sk-...
OPENAI_REALTIME_MODEL=gpt-realtime
OPENAI_VOICE=marin

# Optional: hard override for full system prompt
# If set, this replaces the prompt built from src/config/business.ts
SYSTEM_PROMPT=

# =========================
# Twilio
# =========================
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+1...

# =========================
# Call behavior
# =========================
CALL_TIME_LIMIT=300
BUSINESS_TIMEZONE=America/Toronto
WORKDAY_START_HOUR=9
WORKDAY_END_HOUR=20

# =========================
# Feature flags
# =========================
ENABLE_CALENDAR_TOOLS=true
ENABLE_EMAIL_TOOLS=false

# =========================
# Google (required when Google tools are enabled)
# =========================
GOOGLE_CLIENT_EMAIL=...@...iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
GOOGLE_CALENDAR_ID=primary

# Required only when ENABLE_EMAIL_TOOLS=true
GOOGLE_IMPERSONATED_USER=

# Logging
VERBOSE=true
TIMING_LOG=false
